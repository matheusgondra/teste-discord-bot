{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "nodenext",
    "target": "es2022",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
		"noEmitOnError": true,
		"outDir": "dist",
		"experimentalDecorators": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}